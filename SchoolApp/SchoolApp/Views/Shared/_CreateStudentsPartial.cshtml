@model StudentCreateViewModel

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal content">
            <div class="modal-header">
                <h2 class="modal-title">Öğrenci Pop Up Formu</h2>
            </div>
            <form method="post" action="#">
                <div class="modal-body">
                    <button class="btn btn-primary float-end">Yeni Öğrenci</button>

                    <label class="form-label">Öğrenci Formu</label>
                    <label class="form-label">Ad Soyad</label>
                    <input type="text" class="form-control" value="@Model.FirstName + @Model.LastName" />

                    <label class="form-label">Bölüm</label>

                    <select asp-for="Department" asp-items="@Model.Departments" class="form-select">
                        <option value="@Model.Department"></option>
                    </select>

                    <label class="form-label">Hobiler</label>

                    <select asp-for="Hobbys" asp-items="@Model.Hobbies" class="form-select">
                        <option value="@Model.Hobbys"></option>
                    </select>

                    <label class="form-label">Sınıf Öğretmeni</label>

                    <select asp-for="MainTeacher" asp-items="@Model.MainTeachers" class="form-select">
                        <option value="@Model.MainTeacher"></option>
                    </select>

                    <label class="form-label">Rehber Öğretmeni</label>

                    <select asp-for="GuideTeacher" asp-items="@Model.GuideTeachers" class="form-select">
                        <option value="@Model.GuideTeacher"></option>
                    </select>

                    <button type="submit" class="btn btn-primary float-end">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>